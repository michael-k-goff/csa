doctype html
html
	body
		form(name="orderform",action="/placeorder",method="POST")
			| First Name
			input(type="text", name="firstname")
			| Last Name
			input(type="text",name="lastname")
			br
			| Email
			input(type="text",name="email")
			br
			| Phone Number
			input(type="text",name="phone")
			| Share Type
			br
			select(name="root")
				option(value="0")
					| 0
				option(value="1")
					| 1
			| Root Vegetable Share
			br
			select(name="frozen")
				option(value="0")
					| 0
				option(value="1")
					| 1
				option(value="2")
					| 2
			| Frozen Vegetable Share
			br
			select(name="apple")
				option(value="0")
					| 0
				option(value="1")
					| 1
				option(value="2")
					| 2
			| Apple Share
			br
			select(name="cider")
				option(value="0")
					| 0
				option(value="1")
					| 1
				option(value="2")
					| 2
			| Cider Share
			br
			input(type="submit",value="Place Order")